<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
	<description>WordPress Plugin Boilerplate ruleset.</description>

	<!-- ÎŸnly files with a php extension -->
	<arg name="extensions" value="php" />

	<!-- Exclude Patterns -->
	<exclude-pattern>*/index.php</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/*.asset.php</exclude-pattern>
	<exclude-pattern>./tests/*</exclude-pattern>

	<!-- Configs -->
	<config name="minimum_supported_wp_version" value="5.6" />
	<config name="testVersion" value="7.3-" />

	<!-- Rules -->
	<rule ref="WordPress-Extra">
		<exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
	</rule>

	<rule ref="WooCommerce-Core">
		<exclude name="Core.Commenting.CommentTags.AuthorTag"/>
		<exclude name="WordPress.PHP.DontExtract" />
	</rule>

	<!-- Specific excludes -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>includes/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<exclude-pattern>includes/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="plugin-name" />
		</properties>
	</rule>

	<rule ref="PHPCompatibility">
		<exclude-pattern>./tests/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.PHP.DevelopmentFunctions.error_log_error_log">
		<exclude-pattern>./plugin-name.php</exclude-pattern>
	</rule>
</ruleset>
